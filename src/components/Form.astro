<form
    name="contact"
    method="POST"
    data-netlify="true"
    class="flex flex-col gap-6"
    id="contact-form"
>
    <input
        type="text"
        id="contact-form-name"
        name="name"
        placeholder="Namn"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent outline-none transition-all"
    />
    <input
        type="email"
        id="contact-form-email"
        name="email"
        placeholder="Email"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent outline-none transition-all"
    />
    <input
        type="tel"
        id="contact-form-phone"
        name="phone"
        placeholder="Telefon"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent outline-none transition-all"
    />
    <textarea
        id="contact-form-message"
        name="message"
        placeholder="Meddelande"
        rows="5"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent outline-none transition-all resize-vertical"
    ></textarea>
    <button
        type="button"
        id="contact-form-submit-button"
        class="w-full bg-gradient-to-r from-orange-500 to-orange-600 text-white font-semibold py-3 px-6 rounded-lg hover:from-orange-600 hover:to-orange-700 focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 transition-all disabled:opacity-50 disabled:cursor-not-allowed"
    >
        Skicka meddelande
    </button>
</form>
